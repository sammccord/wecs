{
  "name": "wecs",
  "version": "8.0.0-alpha.2",
  "license": "MIT",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "ecs",
    "entity component system",
    "gamedev"
  ],
  "author": "Sam McCord <sam.mccord@protonmail.com>",
  "bugs": {
    "url": "https://github.com/sammccord/wecs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammccord/wecs.git"
  },
  "scripts": {
    "build": "NODE_ENV=prodution vite build && tsc --emitDeclarationOnly --declaration",
    "benchmark": "node benchmark.cjs",
    "clean": "rm -rf dist",
    "dev": "vite build --watch",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.26.3"
  }
}
